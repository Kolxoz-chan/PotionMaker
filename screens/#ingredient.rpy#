init python:
    class Ingredient():
        
        def __init__(self, name, icon, health, power, speed, mind):
            self.name = name
            self.icon = icon
            
            self.health = health
            self.power = power
            self.speed = speed
            self.mind = mind
            
    class Potion(Ingredient):
         
        def __init__(self, health, power, speed, mind):
            self.name = "Зелье"
            self.icon = Game.tilesets["ingredients"][1][1]
            
            self.health = health
            self.power = power
            self.speed = speed
            self.mind = mind
